{
    "name": "swoft/http-server",
    "type": "library",
    "keywords": [
        "php",
        "swoole",
        "swoft"
    ],
    "description": "microservice framework base on swoole",
    "license": "Apache-2.0",
    "require": {
        "swoft/console": "^1.0",
        "swoft/http-message": "^1.0",
        "swoft/framework": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Swoft\\Http\\Server\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SwoftTest\\HttpServer\\": "test/Cases"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    ],
    "require-dev": {
        "eaglewu/swoole-ide-helper": "dev-master",
        "phpunit/phpunit": "^5.7"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit -c phpunit.xml"
    }
}
