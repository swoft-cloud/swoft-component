{
  "name": "swoft/framework",
  "type": "library",
  "keywords": [
    "php",
    "swoole",
    "swoft"
  ],
  "description": "micro-service framework base on swoole",
  "license": "Apache-2.0",
  "require": {
    "php": ">=7.1",
    "swoft/config": "~2.0.0",
    "swoft/annotation": "~2.0.0",
    "swoft/bean": "~2.0.0",
    "swoft/event": "~2.0.0",
    "swoft/console": "~2.0.0",
    "swoft/error": "~2.0.0",
    "swoft/log": "~2.0.0",
    "swoft/aop": "~2.0.0",
    "swoft/server": "~2.0.0",
    "swoft/stdlib": "~2.0.0"
  },
  "autoload": {
    "classmap": [
      "src/Swoft.php"
    ],
    "psr-4": {
      "Swoft\\": "src/",
      "SwoftTest\\Testing\\": "test/testing/"
    },
    "files": [
      "src/Helper/Functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "SwoftTest\\Unit\\": "test/unit/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5"
  },
  "scripts": {
    "test": "php run.php -c phpunit.xml"
  }
}
