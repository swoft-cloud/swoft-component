{
  "name": "swoft/http-server",
  "type": "library",
  "keywords": [
    "php",
    "swoole",
    "swoft"
  ],
  "description": "micro-service framework base on swoole",
  "license": "Apache-2.0",
  "require": {
    "swoft/framework": "~2.0.0",
    "swoft/http-message": "~2.0.0",
    "swoft/validator": "~2.0.0"
  },
  "autoload": {
    "psr-4": {
      "Swoft\\Http\\Server\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SwoftTest\\Http\\Server\\Unit\\": "test/unit/",
      "SwoftTest\\Http\\Server\\Testing\\": "test/testing/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit -c phpunit.xml"
  }
}
