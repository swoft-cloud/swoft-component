{
    "name": "swoft/task",
    "type": "library",
    "keywords": [
        "php",
        "swoole",
        "swoft",
        "task",
        "routine"
    ],
    "description": "microservice framework base on swoole",
    "license": "Apache-2.0",
    "require": {
        "swoft/framework": "^1.0"
    },
    "require-dev": {
        "swoft/process": "^1.0",
        "eaglewu/swoole-ide-helper": "dev-master",
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "Swoft\\Task\\": "src/"
        },
        "files": [
            "src/Helper/Functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SwoftTest\\Task\\": "test/Cases"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    ],
    "scripts": {
        "test": "./vendor/bin/phpunit -c phpunit.xml"
    }
}
