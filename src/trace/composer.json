{
    "name": "swoft/trace",
    "type": "library",
    "keywords": [
        "php",
        "swoole",
        "swoft",
        "trace",
        "zipkin",
        "cat"
    ],
    "description": "Trace Component for Swoft",
    "license": "Apache-2.0",
    "require": {
        "swoft/framework": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Swoft\\Trace\\": "src/"
        }
    },
    "require-dev": {
        "swoft/swoole-ide-helper": "dev-master",
        "phpunit/phpunit": "^5.7",
        "friendsofphp/php-cs-fixer": "^2.10"
    },
    "autoload-dev": {
        "psr-4": {
            "SwoftTest\\Trace\\": "test/Cases"
        }
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.laravel-china.org"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit -c phpunit.xml",
        "cs-fix": "./vendor/bin/php-cs-fixer fix $1"
    }
}
